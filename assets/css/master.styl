@import '_settings'

normalize-css()
base()

body
  font-family: font-stack !important
  padding: 0px
  font-size: font-size

.bs-docs-header
	background-color: blue
	color: white
	padding: 25px 10px

.footer
  background: #333
  padding: 50px 0
  margin-top: 50px
  color: #fff

.navbar
	margin-bottom: 0px !important

.thumbnails h4 a
  color: blue !important

.btn
  background-color: blue !important

.portrait-error
  position fixed
  top 0
  left 0
  text-align center
  padding-top 55%
  width 100%
  height 100%
  text-align center
  background #fff
  z-index 9999



@media screen and (orientation:portrait)
  body
    background red !important
  .portrait-error
    display block

@media screen and (orientation:landscape)
  body
    background blue !important
  .portrait-error
    display none